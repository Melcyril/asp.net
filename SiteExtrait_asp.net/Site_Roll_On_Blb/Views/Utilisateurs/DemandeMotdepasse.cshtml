@model Site_Roll_On_Blb.Models.Utilisateur
@using Site_Roll_On_Blb.Models
    <div class="center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h1 class="col-md-12 titrelogin">Demander un nouveau mot de passe</h1>

                @if (ViewBag.succesdemande != null)
                {
                    <p class="Messagemdpoublie" role="alert">@ViewBag.succesdemande</p>
                }
                else if (ViewBag.Email_lost != null)
                {
                    <p class="Messagemdpoublie" role="alert">@ViewBag.Email_lost</p>
                }
                else if (ViewBag.Email_regex != null)
                {
                    <p class="Messagemdpoublie" role="alert">@ViewBag.Email_regex</p>
                }
                else if (ViewBag.connu != null)
                {
                    <p class="Messagemdpoublie" role="alert">@ViewBag.connu</p>
                }
                else if (ViewBag.MeSSAGEERREUR != null)
                {
                    <p class="Messagemdpoublie" role="alert">@ViewBag.MeSSAGEERREUR</p>
                }
                else if (TempData["test"] != null)
                {
                    <p class="Messagemdpoublie" role="alert">@TempData["test"]</p>
                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @*@Html.LabelFor(model => model.mailUtilisateur, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div>
                        @Html.EditorFor(model => model.mailUtilisateur, new { htmlAttributes = new { @class = "form-control placertxt", placeholder = "Entrez votre Email" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="submit" value="valider" class="btn btn-primary valider" />
                    </div>
                </div>
            </div>
        }
        <br /><br />
              <div class="col-md-offset-2 divretour">
                  <a class="retour retourmdpoublie" href="~/">Retour</a>
              </div>
    </div>
