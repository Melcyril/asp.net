@model Site_Roll_On_Blb.Models.Utilisateur

<div class="pageoubliemdp">
    @using (Html.BeginForm("ResultatMdp", "Utilisateurs", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="centrer">
                <h1 class="titrelogin">Changer votre mot de passe</h1>
            </div>
           

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("email", TempData["email"])
            @if (ViewBag.succes != null)
            {
                <div class="alert alert-success lost-erreur" role="alert">@ViewBag.succes</div>

            }
            else if (ViewBag.error != null)
            {
                <div class="alert alert-danger lost-erreur" role="alert">@ViewBag.error</div>
            }
            else if (ViewBag.Identique != null)
            {
                <div class="alert alert-danger lost-erreur" role="alert">@ViewBag.Identique</div>
            }
            else if (ViewBag.Email != null)
            {
                <div class="alert alert-info lost-erreur" role="alert">@ViewBag.Email</div>
            }
            else if (ViewBag.longueur != null)
            {
                <div class="alert alert-info lost-erreur" role="alert">@ViewBag.longueur</div>
            }
            <div class="form-group centrer">
        
                    @*@Html.LabelFor(model => model.mdpUtilisateur, "Entrer nouveau mot de passe", htmlAttributes: new { @class = "control-label col-md-4" })*@
             
         
                        @Html.EditorFor(model => model.mdpUtilisateur, new { htmlAttributes = new { @class = "form-control newmdp", @type = "Password", placeholder = "Saisir un nouveau mot de passe" } })
     

            </div>

            <div class="form-group centrer">
             
                    @*@Html.Label("Confirmer mot de passe", htmlAttributes: new { @class = "control-label col-md-4" })*@
       
           
                        @Html.Editor("Cpassword", new { htmlAttributes = new { @class = "form-control newmdpconfirm", @type = "Password", placeholder = "Confirmer le nouveau mot de passe" } })
         
           
            </div>

            <div class="form-group centrer">

                    <div class="col-md-offset-2">
                        <input type="submit" value="Valider" class="btn btn-danger btnvalidmdp" />
                    </div>
                </div>
            </div>

             
                    <div class="col-md-offset-2 centrer">
                        <a class="retour retourmdpoublie" href="~/Utilisateurs/DemandeMotdepasse">Retour</a>
                    </div>
            
          
        
    }
</div>




