
@using Site_Roll_On_Blb.Models;

@model Site_Roll_On_Blb.Models.Caroussel

@{
    //Scripts.Render("~/bundles/jquery");
    //Scripts.Render("~/bundles/bootstrap");
    IEnumerable<Caroussel> ListeImage = ViewBag.Caroussel;
    //IEnumerable<Caroussel> ListeSlideImage = ViewBag.Caroussel;
    int i = 0;
    int h = 0;


}
    <div id="carouselExampleControls" class="container-fluid imagecarou carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
        @for (h = 0; h < ListeImage.Count(); h++)
        {

            if (h == 0)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@h" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@h"></li>
            }
         
        }
        </ol>
        <div class="carousel-inner">

            @foreach (var item in ListeImage)
            {
                try
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@item.urlCaroussel">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@item.urlCaroussel">
                        </div>
                    }
                    i++;

                }
                catch (Exception)
                {

                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
